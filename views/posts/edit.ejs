<h1>Edit post: <%= post.title %></h1>

<form action="/posts/<%=post.id%>?_method=PUT" method="POST">
  <div>
    <input type="text" name="post[title]" id="" value="<%= post.title %>" />
  </div>
  <div>
    <input type="text" name="post[price]" id="" value="<%= post.price %>" />
  </div>
  <div>
    <textarea name="post[description]" cols="30" rows="10">
<%= post.description %></textarea
    >
  </div>
  <div>
    <input
      type="text"
      name="post[location]"
      id=""
      value="<%= post.location %>"
    />
  </div>
  <div>
    <input type="submit" value="Edit" />
  </div>
</form>
